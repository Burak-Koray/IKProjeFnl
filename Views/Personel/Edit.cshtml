@model IKProje.Models.Sicil
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Date Picker Example</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- Flatpickr CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
</head>
<body>

    <h1>Personel Düzenle</h1>
    <form method="post">
        <div class="mt-3" style="display: none;">
            <label class="form-label">Sicil Id</label>
            <input type="text" class="form-control" asp-for="SId" />
        </div>
        <div class="mt-3">
            <label class="form-label">Sicil No</label>
            <input type="text" class="form-control" asp-for="Sicilno" />
        </div>
        <div class="mt-3">
            <label class="form-label">Ad Soyad</label>
            <input type="text" class="form-control" asp-for="Adisoyadi" />
            <div class="form-group">
            </div>
                <label asp-for="Bolumadi" class="form-label">Departman Adı</label>
                <select asp-for="Bolumadi" class="form-control" asp-items="ViewBag.Bolumler">
                    <option value="">Lütfen seçiniz</option>
                </select>
            </div>       
        <label asp-for="Ozelkod" class="form-label">Çalışan Statüsü</label>
        <select asp-for="Ozelkod" class="form-control" asp-items="ViewBag.Ozelkod">
            <option value="">Lütfen seçiniz</option>
        </select>
      
            <div class="form-group">
                <label asp-for="Mesaiadi" class="form-label">Mesai Türü</label>
                <select asp-for="Mesaiadi" class="form-control" asp-items="ViewBag.mesaituru">
                    <option value="">Lütfen seçiniz</option>
                </select>
            </div>
            <div class="mt-3">
            <label asp-for="Giristarihi" class="form-label">Giriş Tarihi</label>
            <input type="text" id="giristarihi" class="form-control" asp-for="Giristarihi" />
        </div>
        <div class="mt-3">
            <label asp-for="Cikistarihi" class="form-label">Çıkış Tarihi</label>
            <input type="text" id="cikistarihi" class="form-control" asp-for="Cikistarihi" />
        </div>
        <div class="d-flex">
            <div class="mt-3 me-2">
                <button type="submit" class="btn btn-primary">Güncelle</button>
            </div>
            <div class="mt-3">
                <button type="submit" class="btn btn-danger"
                        asp-area="" asp-controller="Personel" asp-action="Delete">
                    Personeli Sil
                </button> 
            </div>
        </div>
    </form>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <!-- Flatpickr JS -->
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            flatpickr("#giristarihi", {
                dateFormat: "Ymd"
            });
            flatpickr("#cikistarihi", {
                dateFormat: "Ymd"
            });
        });
    </script>
</body>
</html>
